<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>de.invesdwin</groupId>
		<artifactId>invesdwin-context-rintegrate-packages</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>invesdwin-context-rintegrate-lspm</artifactId>
	<packaging>jar</packaging>

	<!-- WARNING: this module needs to be run on Ubuntu 14.04 with the following 
		packages installed: -->
	<!-- sudo apt-get install maven3 gcc-4.7 gcc-4.7-plugin-dev gfortran-4.7 
		gcc-4.7.multilib r-base-dev -->
	<!-- PPA: https://launchpad.net/~andrei-pozolotin/+archive/ubuntu/maven3 -->
	<dependencies>
		<dependency>
			<groupId>org.renjin.cran</groupId>
			<artifactId>DEoptim</artifactId>
			<version>2.2-4-b5</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.renjin</groupId>
				<artifactId>gcc-bridge-maven-plugin</artifactId>
				<configuration>
					<!-- Sets the package name of all generated classes -->
					<packageName>de.invesdwin.context.rintegrate.lspm</packageName>
					<includeDirectories>
						<includeDirectory>/usr/share/R/include/</includeDirectory>
					</includeDirectories>
					<cFlags>
						<cFlag>-std=c99</cFlag>
					</cFlags>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
